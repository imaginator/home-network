#!/bin/bash -x

set -e

# options include nanostationm2 and w8970
MODEL=$1
TAG=master

if [ -d $MODEL.src ]; then
    cd $MODEL.src
    git pull
else
  git clone https://git.lede-project.org/source.git $MODEL.src
  cd $MODEL.src
fi

git checkout ${TAG}

./scripts/feeds update -a 
./scripts/feeds install -a

# copy in the config things we care about
cp ../$MODEL.diffconfig .config

# expand to full config
make defconfig

# Build
ionice --class 3 make -j 2 V=s

cp .config .config.$MODEL.$(date --iso)
