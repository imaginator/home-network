#!/bin/bash
set -xe

MODEL=$1
VERSION=23.05.0-rc4
BUILDDIR=/tmp/openwrt-build
BASE_PACKAGES=" \
  dropbear \
  prometheus-node-exporter-lua \
  prometheus-node-exporter-lua-nat_traffic \
  prometheus-node-exporter-lua-netstat \
  prometheus-node-exporter-lua-openwrt \
  prometheus-node-exporter-lua-wifi \
  prometheus-node-exporter-lua-wifi_stations \
  prometheus-node-exporter-lua-textfile \
  tcpdump-mini \
  "

case $MODEL in
"switch02")
  PLATFORM=realtek
  TYPE=rtl838x
  TARGET_DEVICE=realtek-rtl838x
  PROFILE=d-link_dgs-1210-28
  EXTRA_PACKAGES="\
    6in4 \
    bind-host \
    ca-bundle \
    ca-certificates \
    curl \
    ip-bridge \
    ip-full \
    kmod-tun \
    libatomic \
    libnl \
    libnl-core \
    libnl-genl \
    libnl-nf \
    libnl-route \
    libstdcpp \
    lldpd \
    luci \
    luci-app-firewall \
    luci-app-watchcat \
    luci-base \
    luci-mod-admin-full \
    luci-mod-network \
    luci-mod-status \
    luci-proto-ipv6 \
    odhcp6c \
    uboot-envtools \
    watchcat \
  "
  REMOVED_PACKAGES="\
    -dnsmasq \
    -odhcpd \
    -odhcpd-ipv6only \
    " # dhcpv6 stuff provided by dnsmasq-full
;;


"travelrouter")
  PLATFORM=ramips
  TYPE=mt76x8
  TARGET_DEVICE=ramips-mt76x8
  PROFILE=wavlink_wl-wn577a2
  EXTRA_PACKAGES="\
    dnsmasq \
    iwinfo \
    luci \
    curl \
    luci-app-travelmate \
    luci-proto-wireguard \
    qrencode \
    travelmate \
    wireguard-tools \
  "
  REMOVED_PACKAGES=""
;;


"f17gw")
  PLATFORM=ramips
  TYPE=mt7621
  TARGET_DEVICE=ramips-mt7621
  # PROFILE=mikrotik_routerboard-760igs
  PROFILE=ubnt_edgerouter-x
  EXTRA_PACKAGES="\
    6in4 \
    bind-host \
    ca-bundle \
    ca-certificates \
    curl \
    ddns-scripts \
    dnsmasq-full \
    dnstop \
    ip-bridge \
    ip-full \
    iptables-mod-tee \
    kmod-ipip \
    kmod-tun \
    kmod-wireguard \
    libatomic \
    libnl \
    libnl-core \
    libnl-genl \
    libnl-nf \
    libnl-route \
    libstdcpp \
    lldpd \
    luci \
    luci-app-ddns \
    luci-app-firewall \
    luci-app-mwan3 \
    luci-app-watchcat \
    luci-app-wireguard \
    luci-base \
    luci-mod-admin-full \
    luci-proto-ipv6 \
    luci-proto-wireguard \
    mwan3 \
    odhcp6c \
    odhcpd \
    qrencode \
    softflowd \
    sqm-scripts \
    sqm-scripts-extra \
    uboot-envtools \
    watchcat \
    wireguard-tools \
  "
  REMOVED_PACKAGES="\
    -dnsmasq \
    -odhcpd-ipv6only \
    "
;;

"nanostationm2")
  PLATFORM=ath79
  TYPE=generic
  TARGET_DEVICE=ath79-generic
  PROFILE=ubnt_nanostation-m
  EXTRA_PACKAGES="\
    dawn \
    wpad \
    "
  REMOVED_PACKAGES="\
    -dnsmasq \
    -hostapd-openssl \
    -luci-proto-ppp \
    -ppp \
    -ppp-mod-pppoe \
    -wpa-supplicant \
    -wpa-supplicant-mini \
    -wpad-basic \
    -wpad-basic-wolfssl \
    -wpad-mini \
    "
;;


"ubnt-uap-ac-lite")
  PLATFORM=ath79
  TYPE=generic
  TARGET_DEVICE=ath79-generic
  PROFILE=ubnt_unifiac-lite
  EXTRA_PACKAGES="\
    dawn \
    luci-app-dawn \
    luci \
    wpad \
    "
  REMOVED_PACKAGES="\
    -dnsmasq \
    -hostapd-openssl \
    -luci-proto-ppp \
    -ppp \
    -ppp-mod-pppoe \
    -wpa-supplicant \
    -wpa-supplicant-mini \
    -wpad-basic \
    -wpad-basic-wolfssl \
    -wpad-mini \
    "
;;

"nanobridge-m5")
  PLATFORM=ath79
  TYPE=generic
  TARGET_DEVICE=ath79-generic
  PROFILE=ubnt_nano-m
  EXTRA_PACKAGES="\
    curl \
    hostapd-openssl \
    ip-tiny \
    luci luci-base \
    luci-theme-bootstrap \
    odhcp6c \
    "
  REMOVED_PACKAGES="-wpad-mini"
;;

"mr33")
  PLATFORM=ipq40xx
  TYPE=generic
  TARGET_DEVICE=ipq40xx
  PROFILE meraki_mr33
  EXTRA_PACKAGES="\
    curl \
    hostapd-openssl \
    ip-tiny \
    luci \
    luci-base \
    luci-theme-bootstrap \
    odhcp6c \
    "
  REMOVED_PACKAGES="-dnsmasq -wpad-mini -wpad-basic -wpa-supplicant -wpa-supplicant-mini"
;;

*)
  echo "specify build target (f17gw ; ubnt-uap-ac-lite ; nanostationm2 ; nanobridge-m5 ; w16gw ; ubnt-uap-pro; mr33)"
  exit 1
;;
esac

if [ ! -d ${BUILDDIR} ] ; then
  mkdir ${BUILDDIR}
fi

# the need for $TYPE and $TARGET_DEVICE seems dumb but it helps get aroudn the problem of downloads        ↓↓↓↓↓↓↓
# http://downloads.openwrt.org/releases/18.06.1/targets/ath79/generic/openwrt-imagebuilder-18.06.1-ath79-generic.Linux-x86_64.tar.xz
#http://downloads.openwrt.org/releases/18.06.1/targets/ipq40xx/generic/openwrt-imagebuilder-18.06.1-ipq40xx.Linux-x86_64.tar.xz

if [ ! -d ${BUILDDIR}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64 ] ; then
  if [ ! -f ${BUILDDIR}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64.tar.xz ]; then
   (cd ${BUILDDIR} && curl -C - -O https://downloads.openwrt.org/releases/${VERSION}/targets/${PLATFORM}/${TYPE}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64.tar.xz )
  fi
  tar xfJ ${BUILDDIR}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64.tar.xz -C ${BUILDDIR}/
fi

COMBINED_PACKAGE_LIST="`echo ${REMOVED_PACKAGES}` `echo ${BASE_PACKAGES}` `echo ${EXTRA_PACKAGES}`"
echo "Combined package list ${COMBINED_PACKAGE_LIST}"

echo "Building ${VERSION}..."
( cd ${BUILDDIR}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64 && sudo make image PROFILE="$PROFILE" PACKAGES="$COMBINED_PACKAGE_LIST" )

echo "scp -O ${BUILDDIR}/openwrt-imagebuilder-${VERSION}-${TARGET_DEVICE}.Linux-x86_64/bin/targets/${PLATFORM}/${TYPE}/openwrt-${VERSION}-${TARGET_DEVICE}-${PROFILE}-squashfs-sysupgrade.bin root@<dest>:/tmp"
