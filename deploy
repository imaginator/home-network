#!/bin/sh
set -e # fail if we can't source the file
. ./network-secrets.env
set -x

case $1 in
  w16gw)
    envsubst \ '
    $dh2048_pem \
    $henet_w16_password \
    $henet_w16_tunnelid \
    $henet_w16_username \
    $w16gw_ddns4_domain \
    $w16gw_ddns4_password \
    $w16gw_ddns4_username \
    $w16gw_ddns6_domain \
    $w16gw_ddns6_password \
    $w16gw_ddns6_username \
    $wg_f17gw_public_key \
    $wg_w16gw_private_key \
    $wg_w16gw_public_key \
    ' < w16gw.settings  | ssh root@10.7.10.1
    ;;

  f17gw)
    envsubst \ '
    $dh2048_pem \
    $f17gw_ddns4_domain \
    $f17gw_ddns4_password \
    $f17gw_ddns4_username \
    $f17gw_ddns6_domain \
    $f17gw_ddns6_password \
    $f17gw_ddns6_username \
    $freifunk_ca_crt \
    $freifunk_client_crt \
    $freifunk_client_key \
    $henet_f17_password \
    $henet_f17_tunnelid \
    $henet_f17_username \
    $lan_wifikey \
    $wg_f17gw_private_key \
    $wg_f17gw_private_key \
    $wg_f17gw_public_key \
    $wg_f17gw_public_key \
    $wg_furrow_private_key \
    $wg_furrow_private_key \
    $wg_furrow_public_key \
    $wg_furrow_public_key \
    $wg_simonphone_private_key \
    $wg_simonphone_private_key \
    $wg_simonphone_public_key \
    $wg_simonphone_public_key \
    $wg_tablet_private_key \
    $wg_tablet_public_key \
    $wg_vpn_private_key \
    $wg_vpn_public_key \
    $wg_windows_private_key \
    $wg_windows_public_key \
    $wg_w16gw_public_key \
    ' < f17gw.settings | ssh root@10.7.11.1
    ;;

  switch02)
    envsubst \ '
    $dh2048_pem \
    $f17gw_ddns4_domain \
    $f17gw_ddns4_password \
    $f17gw_ddns4_username \
    $f17gw_ddns6_domain \
    $f17gw_ddns6_password \
    $f17gw_ddns6_username \
    $freifunk_ca_crt \
    $freifunk_client_crt \
    $freifunk_client_key \
    $henet_f17_password \
    $henet_f17_tunnelid \
    $henet_f17_username \
    $lan_wifikey \
    $wg_f17gw_private_key \
    $wg_f17gw_private_key \
    $wg_f17gw_public_key \
    $wg_f17gw_public_key \
    $wg_furrow_private_key \
    $wg_furrow_private_key \
    $wg_furrow_public_key \
    $wg_furrow_public_key \
    $wg_simonphone_private_key \
    $wg_simonphone_private_key \
    $wg_simonphone_public_key \
    $wg_simonphone_public_key \
    $wg_tablet_private_key \
    $wg_tablet_public_key \
    $wg_vpn_private_key \
    $wg_vpn_public_key \
    $wg_windows_private_key \
    $wg_windows_public_key \
    $wg_w16gw_public_key \
    ' < switch02.settings | ssh root@switch02
    ;;

  repeater-lounge|repeater-bedroom1)
    envsubst \ '
    $lan_wifikey \
    $iot_wifikey \
    $dual2_roaming_key \
    $freifunk_roaming_key \
    ' < nanostationm2.settings  | ssh root@$1
    ;;

  travelrouter)
    envsubst \ '
    $lan_wifikey \
    $root_shadow \
    ' < travelrouter.settings  | ssh root@192.168.1.1
    ;;

  first-time)
    envsubst \ '
    $lan_wifikey \
    $iot_wifikey \
    $dual2_roaming_key \
    $freifunk_roaming_key \
    ' < nanostationm2.settings  | ssh root@192.168.1.1
    ;;

  repeater08)
    envsubst \ '
    $lan_wifikey \
    $dual2_roaming_key \
    $freifunk_roaming_key \
    ' < mr33.settings  | ssh root@10.7.11.111
    ;;

  *)
    echo "useage: $0 <repeater0X|edgerouterx|first-time>"
  ;;
esac

